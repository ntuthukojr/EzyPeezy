@model IEnumerable<EzyPeezy.Models.Customer>

@{
    Layout = "~/Views/Backend.cshtml";
}



<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h3 class=" text-center">My Customers</h3>
                    <br />
                    <div>
                        <a class="btn btn-primary text-white  mb-0 me-0" href="@Url.Action("Create", "Customers")">Add New Customer</a>
                    </div>
                    <br />
                    <br />

                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        First Name
                                    </th>
                                    <th>
                                        Last Name
                                    </th>
                                    <th>
                                        Email Address
                                    </th>
                                    <th>
                                        Contact Number
                                    </th>
                                    <th>
                                        
                                    </th>
                                    <th>

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.cell_no)
                                        </td>

                                        <td>
                                            @Html.ActionLink("Modify", "Edit", new { id = item.ID }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                            @Html.ActionLink("Remove", "Delete", new { id = item.ID })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
       

    </div>
</div>
