@model EzyPeezy.ViewModels.CustomerTransactionViewModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Backend.cshtml";
}


<div class="content-wrapper">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center">Customer Details</h2>
                    <br/>
                    <p>
                        <div>
                            <a class="btn btn-primary text-white  mb-0 me-0" href="@Url.Action("Index", "Customers")">Back to List</a>
                        </div>
                    </p>
                    <br />
                    <br />

                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Customer.Name)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Customer.Name)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Customer.LastName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Customer.LastName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Customer.Email)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Customer.Email)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Customer.cell_no)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Customer.cell_no)
                        </dd>


                    </dl>

                    @if (Model.Transactions.Count() > 0)
                    {
                        <h4>Transactions</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            @foreach (var item in Model.Transactions)
                            {
                                <dt>@item.TransactionDateTime: R @item.Amount</dt>
                                <dd>@Html.Raw(Html.Encode(item.Items).Replace("\n", "<br>"))</dd>
                            }
                        </dl>
                    }
                </div>
            </div>
        </div>


    </div>
</div>
<hr />
